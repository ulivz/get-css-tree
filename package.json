{
  "name": "html-css-transformer",
  "version": "0.0.2",
  "description": "html css transformer",
  "repository": {
    "url": "ULIVZ/html-css-transformer",
    "type": "git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test:cov": "jest --coverage && npm run lint",
    "test": "npm run lint && jest",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "prepublish": "npm run build",
    "build": "bili --entry index.js --format cjs,es,umd,umd-min --exports default --name htmlCssTransformer"
  },
  "author": "ULIVZ <chl814@foxmail.com>",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "dependencies": {},
  "devDependencies": {
    "jest-cli": "^19.0.0",
    "eslint-config-rem": "^3.0.0",
    "xo": "^0.18.0",
    "babel-preset-env": "^1.4.0",
    "bili": "^0.17.0"
  },
  "xo": {
    "extends": "rem",
    "envs": [
      "jest"
    ]
  }
}
